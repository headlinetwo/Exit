<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- shadow -->
    <item
        android:left="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/menuShadowColor" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/mainMenuHeadingBackground" />
            <corners android:radius="0dp" />

            <stroke android:width="5px" android:color="#000000" />
        </shape>
    </item>
</layer-list>