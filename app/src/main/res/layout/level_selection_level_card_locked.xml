<?xml version="1.0" encoding="utf-8"?>
<de.headlinetwo.exit.customviews.CustomLinearLayoutLevelSelectionLevelCard xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/level_selection_item_background_press_effect"
    android:foreground="@drawable/level_selection_item_locked_foreground_press_effect"
    android:orientation="vertical">

    <de.headlinetwo.exit.customviews.CustomTextView
        android:id="@+id/level_selection_level_card_level_locked_level_index_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="1"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25dp" />

    <ProgressBar
        android:id="@+id/level_selection_level_card_level_unlocked_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:max="100"
        android:padding="4dp"
        android:progress="0"
        android:progressDrawable="@drawable/custom_progress_bar" />

</de.headlinetwo.exit.customviews.CustomLinearLayoutLevelSelectionLevelCard>